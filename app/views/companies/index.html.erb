<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
  <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5">
      <% @companies.each do |company| %>
        <div class="row">
          <div class="col text-center">
            <a href="<%= company_path(company) %>" class="list-group-item list-group-item-action">
              <%= company.name %>
            </a>
          </div>
          <div class="col text-center">
              <%= link_to "Edit", edit_company_path(company), class: "btn btn-primary"%>
              <%= link_to "Delete", company, method: :delete, :data => {:confirm => "Are you sure you want to delete #{company.name}?"}, class: "btn btn-danger"%>
          </div>
        </div>
      <% end %>
    </ul>
  <% end %>
</div>
